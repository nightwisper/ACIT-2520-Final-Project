<html>

<head>
    <title> New Item Listing Page></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        {{> navOnline}}
        <div class="container">
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <br>
            <div class="row centered-form">
                <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">List New Item
                </h3>
                        </div>
                        <div class="panel-body">
                            <form role="form" onsubmit="{{createListing}}">
                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-md-6">
                                        <div class="form-group">
                                            <input type="text" name="item_name" id="item" class="form-control input-sm" placeholder="Item Name">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input type="text" name="item_description" id="desc" class="form-control input-sm" placeholder="Item Description">
                                </div>

                                <div class="row">
                                    <div class="col-xs-6 col-sm-6 col-ms-6">
                                        <div class="form-group">
                                            <input type="text" name="price" id="price" class="form-control input-sm" placeholder="Price">
                                        </div>
                                    </div>
                                    <div class="col-xs-6 col-sm-6 col-ms-6">
                                        <div class="form-group">
                                            <input type="text" name="min-bid" id="min-bid" class="form-control input-sm" placeholder="Min Bid Increase">
                                        </div>
                                    </div>
                                </div>
                                <input type="submit" value="Submit Item" id="submit" class="btn btn-info btn-block">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    <script type="text/javascript" src='/src/newitem.js'>

    </script>
</body>

</html>
